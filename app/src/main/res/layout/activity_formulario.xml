<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/formulario_name"
            android:hint="Nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText android:hint="EndereÃ§o"
            android:id="@+id/formulario_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText android:hint="Telefone"
            android:id="@+id/formulario_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText android:hint="Site"
            android:id="@+id/formulario_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/formulario_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:max="10"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/formulario_salvar"
            android:text="Salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>